<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#CDD6D6D6"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/darkBlue"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#A57C00"
            android:layout_toStartOf="@id/PNTV"
            android:layout_below="@id/header"
            tools:ignore="NotSibling" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp">



        <TextView
            android:id="@+id/equipNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/nameTV"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/MNTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Model Number"
                android:textColor="#606060"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/PNTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Part Number"
                android:textColor="#606060"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/SVTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textColor="#606060"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/modelNumTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Model Number"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/partNumTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Part Number"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/serialNumTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:id="@+id/expires_onTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expires_onTV"
            android:textColor="#606060"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/expireDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires On"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hapticFeedbackEnabled="true"
                android:background="@drawable/btn_bg"
                android:src="@drawable/ic_baseline_edit_24"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hapticFeedbackEnabled="true"
                android:background="@drawable/btn_bg"
                android:src="@drawable/ic_baseline_delete_24"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>