<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#CDD6D6D6"
    android:elevation="10dp"
    android:outlineProvider="background"
    android:clipToOutline="true"
    android:outlineAmbientShadowColor="#FF0000"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toStartOf="@id/PNTV"
            android:background="#2B2B2B"
            tools:ignore="NotSibling" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp">



        <TextView
            android:id="@+id/equipNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/nameTV"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/MNTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Model Number"
                android:textColor="#606060"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/PNTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Part Number"
                android:textColor="#606060"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/SVTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textColor="#606060"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/modelNumTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Model Number"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/partNumTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Part Number"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/serialNumTV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires On"
            android:textColor="#606060"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/expireDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires On"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#2C2C2C"
                android:text="Edit"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#2C2C2C"
                android:text="Delete"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>