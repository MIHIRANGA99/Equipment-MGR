<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EquipmentMGR" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/BtnBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/BtnBlue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCheckBox">
        <item name="colorControlActivated">@color/BtnBlue</item>
    </style>

    <style name="MyEditText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">#007CB6</item>
        <item name="android:colorControlNormal">#85A4D1</item>
    </style>
</resources>